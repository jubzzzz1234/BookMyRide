<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccff90"
    tools:context="com.example.jubin.bookmyride.EconomyCars">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear1"
            android:background="#fff">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/indica"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_indica1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tata Indica" />

                <TextView
                    android:id="@+id/txt_indica2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1000 INR for 150km" />

                <TextView
                    android:id="@+id/txt_indica3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post 150km 5 INR/km" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_indica"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="#CBC911"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:layout_alignParentBottom="true"

                        android:text="book" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/fordfigo"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ford Figo"
                    android:id="@+id/txt_ford1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1100 INR for 150km"
                    android:id="@+id/txt_ford2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post 150km 5 INR/km"
                    android:id="@+id/txt_ford3"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="#CBC911"
                        android:id="@+id/btn_ford"
                        android:text="book"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
</layout>